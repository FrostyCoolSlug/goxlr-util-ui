{
  "productName": "goxlr-utility-ui",
  "version": "0.0.5",
  "identifier": "com.frostycoolslug.goxlr-utility-ui",

  "build": {
    "frontendDist": "../src"
  },

  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "GoXLR Utility",
        "width": 1300,
        "height": 910
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": "appimage",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}