{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "goxlr-utility-ui",
    "version": "0.0.3"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "appimage",
      "identifier": "com.frostycoolslug.goxlr-utility-ui",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "scheme": "http",
          "domain": "localhost",
          "windows": ["main"],
          "plugins": ["shell"]
        }
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "GoXLR Utility",
        "width": 1300,
        "height": 910
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
